default:
	echo "Builds"

dev:
	npm run start

build-one:
	cp client/src/steps/index.minimal.js client/src/index.js

build-two:
	cp client/src/steps/index.final.js client/src/index.js
	cp client/src/steps/routes.author.js client/src/routes.js
	cp client/src/steps/AuthorPage.minimal.js client/src/components/AuthorPage.js

build-three:
	cp client/src/steps/AuthorPage.styled.js client/src/components/AuthorPage.js

build-four:
	cp client/src/steps/BookPage.reads.js client/src/components/BookPage.js

build-final:
	cp client/src/steps/index.final.js client/src/index.js
	cp client/src/steps/routes.final.js client/src/routes.js
	cp client/src/steps/AuthorPage.final.js client/src/components/AuthorPage.js
	cp client/src/steps/BookPage.final.js client/src/components/BookPage.js

